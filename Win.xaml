<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Insistency.Win"
             Title=   "   Constancia é a chave!  "
             BackgroundImageSource="bgwin.svg">
    <VerticalStackLayout>
        <Label Text="Voce está no caminho certo, mas nunca se esqueça do motivo"
               TextColor="Black"
               FontSize="20"
               TranslationY="50"
               TranslationX="20"> </Label>

        <Label Text="O motivo pelo qual faz voce ter motivação"
               TextColor="Black"
               TranslationY="100"
               TranslationX="20"
               FontSize="20"
               > </Label>

        <Label Text="DONT BE A LOOSER"
               FontSize="30"
               LineBreakMode="NoWrap"
               TranslationY="140"
               TranslationX="35"
               TextColor="Black"> </Label>

        <Button Text="HERE USE MOORE ENERGY" 
                TranslationY="190"
                WidthRequest="300"
                TranslationX="-5"
                BackgroundColor="Black"
                Clicked="BotaoMaisMotivacao"></Button>
    </VerticalStackLayout>
</ContentPage>